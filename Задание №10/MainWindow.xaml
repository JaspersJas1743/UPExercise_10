        <TextBlock Style="{DynamicResource MyTextBlock}" Width="50" Height="20" VerticalAlignment="Top" 
                    HorizontalAlignment="Left" Margin="5 65 0 0" Text="OCT" FontSize="14"/>
        <TextBlock Style="{DynamicResource MyTextBlock}" Width="50" Height="20" VerticalAlignment="Top" 
                    HorizontalAlignment="Left" Margin="5 100 0 0" Text="DEC" FontSize="14"/>
        <TextBlock Style="{DynamicResource MyTextBlock}" Width="50" Height="20" VerticalAlignment="Top" 
                   HorizontalAlignment="Left" Margin="5 135 0 0" Text="HEX" FontSize="14"/>

        <TextBox Style="{DynamicResource MyTextBox}" GotFocus="TextBoxGotFocus" Name="Bin" Width="215" Height="30" 
                VerticalContentAlignment="Center" TextChanged="BinTextChanged" PreviewTextInput="TextBoxPreviewTextInput"
                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 25 10 0" FontSize="14"/>
