                VerticalContentAlignment="Center" TextChanged="DecTextChanged" PreviewTextInput="TextBoxPreviewTextInput"
                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 95 10 0" FontSize="14"/>
        <TextBox Style="{DynamicResource MyTextBox}" GotFocus="TextBoxGotFocus" Name="Hex" Width="215" Height="30" 
                VerticalContentAlignment="Center" TextChanged="HexTextChanged" PreviewTextInput="TextBoxPreviewTextInput"
                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 130 10 0" FontSize="14"/>
        
        <Button Style="{DynamicResource MyExit}" Click="ExitClick" Margin="0 0 0 0" VerticalContentAlignment="Center" />
        <Button Style="{DynamicResource MyDeactivate}" Click="DeactivateClick" Margin="0 0 18 0" VerticalContentAlignment="Center" />
